{
  "compilerOptions": {
    "outDir": "./lib",
    "module": "commonjs",
    "lib": ["es6"],
    "declaration": true,
    "declarationDir": "./typings",
    "types": ["node"],
    "typeRoots": ["node_modules/@types"],
    "stripInternal": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "strictNullChecks": false,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**.ts"]
}
